<p>You have come to the home page.</p>

<% if(locals.user){%>
<section id='feed-posts'>
    <h4>
        Posts
    </h4>
    <form action="/users/posts/createPost" id='new-post-form' method="POST">
        <textarea name='content' cols="30" rows="3" placeholder="Type something..." required></textarea>
        <br>
        <input type="submit" value='POST'>
    </form>
</section>
<%}%>
    <br>
    <h4>Your Posts</h4>

    <% for (post of posts){%>
    <div id="post-container">
    <div style='border:2px dashed white'>
        <% if(locals.user && (locals.user.id == post.user.id)){%>
    <small>
        <a href="/users/posts/destroy/?id=<%=post.id%>">Delete Post</a>
    </small>
       <%}%>
    <p> <%= post.content %> </p> 
    <small ><%= post.user.name %></small>           
    </div>
    <br>
    <div id='comment-container'>
        <h4>Comment Section</h4>
    <% for (comment of post.commentIds){%>
        <div style="position:relative;border:2px solid black">
            <%=comment.content%>
            <br>
           <% if(locals.user && (locals.user.id == comment.user.id)){%>
            <small>
                <a href='/users/comment/destroy/<%=comment.id%>'>Delete Comment</a>
            </small>
        <%}%>
            <small style='position:relative;margin-left:93%;color:yellow'><%=comment.user.name%></small>
        </div>
    <%}%>
    </div>
    <% if(locals.user){%>
    <form action="/users/comment/createComment" id='new-comment-form' method="POST">
        <input type="hidden" name='post_id' value="<%= post._id%>">
        <textarea name='content' cols="20" rows="3" placeholder="Type comment..." required></textarea>
        <br>
        <input type="submit" value='Comment'>
    </form>
</div>
    <%}%>
    <%}%>
   



